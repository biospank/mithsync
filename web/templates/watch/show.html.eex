<div class="row">
  <div class="col-sm-<%= video_column_size(@video) %>">
    <div class="video-player-watch" data-url="<%= @video.url %>" data-type="" data-video-id="">
    </div>
  </div>
  <div class="col-sm-<%= slide_column_size(@video) %>">
    <div class="reveal">
      <div class="slides">
        <%= for slide <- @video.slides do %>
          <section hidden class="future" aria-hidden="true" style="display: none;">
            <img src="<%= static_path(@conn, "/#{slide.url}") %>" data-start="<%= slide.start %>"/>
          </section>
        <% end %>
      </div>
    </div>
  </div>
</div>
