    <p class="zinkroo__description mt-15 mb-40"><%= @video.description %></p>
    <hr class="mb-40" />
  </section>
  <div class="row">
    <%= render @view_module, "video_with_description.html", video: @video, conn: @conn %>
    <%= render @view_module, "reveal_slider.html", video: @video, slides: @video.slides, conn: @conn %>
  </div>
</div>
<%= render @view_module, "owl_slider.html", video: @video, slides: @video.slides, conn: @conn %>
